<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shady.nanogerdree.scorekeeper.MainActivity">

    <Button
        android:id="@+id/reset_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/reset" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/my_team"
            android:textAlignment="center"
            android:paddingTop="@dimen/team_text_padding"
            android:paddingBottom="@dimen/team_text_padding"
            android:textSize="@dimen/team_text_size"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/opponent_team"
            android:textAlignment="center"
            android:paddingTop="@dimen/team_text_padding"
            android:paddingBottom="@dimen/team_text_padding"
            android:textSize="@dimen/team_text_size"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/team1_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
            android:textAlignment="center"
            android:paddingTop="@dimen/team_text_padding"
            android:paddingBottom="@dimen/team_text_padding"
            android:textSize="@dimen/team_text_size"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="5dp"
            android:text="@string/separator"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/team2_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
            android:textAlignment="center"
            android:paddingTop="@dimen/team_text_padding"
            android:paddingBottom="@dimen/team_text_padding"
            android:textSize="@dimen/team_text_size"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/team1_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/score"
            android:textAlignment="center"
            android:padding="@dimen/team_text_padding"
            android:layout_margin="@dimen/team_text_padding"
            android:textSize="@dimen/team_text_size"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/team2_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/score"
            android:textAlignment="center"
            android:padding="@dimen/team_text_padding"
            android:layout_margin="@dimen/team_text_padding"
            android:textSize="@dimen/team_text_size"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
